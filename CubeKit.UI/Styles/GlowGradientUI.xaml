                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="PointerFocused">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BottomBar" Duration="0:0:0.25" EnableDependentAnimation="True" Storyboard.TargetProperty="ScaleX" To="1"/>
